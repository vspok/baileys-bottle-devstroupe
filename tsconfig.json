{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "target": "ES2020",  // Change this to "es6" or another ES version supporting private identifiers
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "src/example/**/*"]
}
